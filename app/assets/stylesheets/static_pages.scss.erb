.earn, .save {
	background: url(<%= asset_path 'bg_earn.jpg' %>) no-repeat center top;
	background-color: #9B9B9B;
	background-blend-mode: multiply;
	background-size: cover;
	background-position: center center;
	min-height: 720px;

	.container {
		padding-bottom: 80px;
	}

	a {
		small {
			text-decoration: none;
			color: white;
			background-color: transparent;
		}
	}
}

.card {
	position: relative;
	overflow: hidden;
	margin: 0.5rem 0 1rem 0;
	background-color: #fff;
	transition: box-shadow .25s;
	border-radius: 2px;
	box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
	color: #9B9B9B;
	text-align: left;
	margin-bottom: 20px;

	a:hover, a:active, a:link {
		background-color: transparent;
	}

	.card-content {
		padding: 20px;
		border-radius: 0 0 2px 2px;
	}

	.card-title {
	    line-height: 48px;
	    font-size: 24px;
        font-weight: 300;
	}

	.card-action {
	    border-top: 1px solid rgba(160, 160, 160, 0.2);
	    padding: 20px;
	    a {
    		color: #F29F81;
    		margin-right: 20px;
    		text-transform: uppercase;
    		background-color: transparent;
    	}


	}
}

.result {
	a {
		color: white;
		cursor: pointer;
	}
	a:hover, a:link, a:active {
		color:white;
	}
	h5 {
		margin-bottom: 20px;
	}
}

small {
	color: white;
}



