body {
	background: url("<%= asset_path 'bg.jpg' %>") no-repeat center top;
	background-size: cover;
	background-position: center center;
}

body:before {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    content: "";
}

input[type="number"] {
  	display: block;
  	margin: 0;
  	width: 100%;
  	font-size: 36px;
  	letter-spacing: -1.2px;
  	line-height: 36px;
  	appearance: none;
  	box-shadow: none;
  	border-radius: none;
	border: none;
  	border-bottom: solid 2px #c9c9c9;
  	transition: border 0.3s;
  	text-align: center;
  	color: white;
  	margin-top: -20px;
  	background-color: transparent;
}

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.welcome, .choices {
	min-height: 720px;
}
.field {
	display: inline;
}

.balance-help {
	transition: all 0.3s;
}

.hide {
	display: none;
}

input[type="number"]:focus {
  	outline: none;
  	border-bottom: solid 2px #969696;
}

.logo {
	margin-top: 100px;
}

.intro, .result {
	color: white;
}

.btn-orange {
	background-color: #F29F81;
	color: white;
	margin-top: 30px;
}

.result {
	margin-top: 150px;
}

.save {
	margin-top: 20px;
	background-color: white;
}

.save:hover, .save:focus {
	color: #F29F81;
}