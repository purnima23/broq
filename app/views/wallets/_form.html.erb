<%= form_for(@wallet) do |f| %>
  <% if @wallet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wallet.errors.count, "error") %> prohibited this wallet from being saved:</h2>

      <ul>
      <% @wallet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h3>Tell us how much do you have left</h3>
  <div class="row">
    <div class="field col-md-4 col-md-offset-4">
      <%# f.label :balance_left %><br>
      <%= f.number_field :balance_left, :class => "balance" %>
      <!-- <small class="balance-help hide">PRESS ENTER</small> -->
    </div>
  </div>
  <h3>How many days to payday?</h3>
  <div class="row">
    <div class="field col-md-4 col-md-offset-4">
      <%# f.label :days_left %><br>
      <%= f.number_field :days_left %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Continue", :class => "btn btn-orange"%>
  </div>
<% end %>
